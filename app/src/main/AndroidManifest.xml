            android:name=".Registration.Registration_Profile"
            android:exported="false" />
        <activity
            android:name=".Registration.Registration_PhoneVerification"
            android:exported="false" />
        <activity
            android:name=".Registration.Registration_Phone"
            android:exported="false" />
        <activity
