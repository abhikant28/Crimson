<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB151515"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Utilities.Wallpaper">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="50sp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:id="@+id/wallpaper_ll_chatLayoutBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="2sp"
                android:background="@drawable/round_box_chat_message"
                android:paddingHorizontal="30sp"
                android:paddingVertical="5sp"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/round_box_chat_message"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical"
                android:paddingHorizontal="35sp"
                android:paddingVertical="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15sp"
                android:layout_marginHorizontal="5sp"
                android:background="@drawable/round_box_chat_message"
                android:backgroundTint="#1565C0"
                android:orientation="vertical"
                android:paddingHorizontal="35sp"
                android:paddingVertical="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="250sp"
                android:animateLayoutChanges="true"
                android:background="@drawable/chat_bottom_cardview_background"
                android:backgroundTint="#303030"
                android:orientation="horizontal"
                android:paddingHorizontal="2dp"
                android:paddingVertical="5dp"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_baseline_add_24"
                    android:backgroundTint="@color/white" />


                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/black"
                        android:paddingHorizontal="3sp"
                        android:paddingVertical="5sp">

                        <ImageButton
                            android:layout_width="21sp"
                            android:layout_height="21sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/ic_baseline_emoji_emotions_24"
                            android:backgroundTint="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_box_chat_input"
                            android:backgroundTint="@color/black"
                            android:hint="Message...."
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="10"
                            android:scrollHorizontally="false"
                            android:singleLine="false"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_baseline_add_24"
                            android:backgroundTint="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>
                    <!--                        android:background="@drawable/round_box_chat_input"-->
                </androidx.cardview.widget.CardView>


                <ImageButton
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginEnd="2sp"
                    android:background="@drawable/circle_box"
                    android:backgroundTint="#303030"
                    android:src="@drawable/ic_baseline_mic_24" />

                <ImageButton
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6sp"
                    android:background="@drawable/ic_baseline_camera_alt_24"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/wallpaper_btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"

        android:layout_marginTop="20sp"/>

</LinearLayout>